        // --- General Initializations ---
        document.getElementById('current-year').textContent = new Date().getFullYear();

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('visible');
                    observer.unobserve(entry.target);
                }
            });
        }, { threshold: 0.1 });
        document.querySelectorAll('.scroll-reveal').forEach(el => observer.observe(el));

        // --- Mobile Menu ---
        const menuBtn = document.getElementById('menu-btn');
        const mobileMenu = document.getElementById('mobile-menu');
        const menuIcon = document.getElementById('menu-icon');
        menuBtn.addEventListener('click', () => {
            mobileMenu.classList.toggle('translate-x-full');
            menuIcon.classList.toggle('fa-bars');
            menuIcon.classList.toggle('fa-times');
        });
        document.querySelectorAll('.mobile-menu-link').forEach(link => {
            link.addEventListener('click', () => {
                mobileMenu.classList.add('translate-x-full');
                menuIcon.classList.add('fa-bars');
                menuIcon.classList.remove('fa-times');
            });
        });
        
        // --- Services Section ---
        const servicesGrid = document.getElementById('services-grid');
        function renderServices() {
            appData.services.forEach((service, index) => {
                const serviceCard = document.createElement('div');
                serviceCard.className = 'bg-white dark:bg-slate-800 p-8 rounded-xl shadow-lg scroll-reveal hover:shadow-2xl hover:-translate-y-1 transition-all duration-300';
                serviceCard.style.transitionDelay = `${index * 100}ms`;
                serviceCard.innerHTML = `
                    <div class="text-4xl text-amber-600 mb-4"><i class="fas ${service.icon}"></i></div>
                    <h3 class="font-heading text-2xl font-bold text-cyan-800 dark:text-cyan-400 mb-3">${service.title}</h3>
                    <p class="text-slate-600 dark:text-slate-400 leading-relaxed">${service.description}</p>
                `;
                servicesGrid.appendChild(serviceCard);
                observer.observe(serviceCard);
            });
        }

        // --- Bike Explorer Section ---
        const bikeGrid = document.getElementById('bike-grid');
        const bikeFilters = document.getElementById('bike-filters');

        function renderBikes(filter = 'all') {
            bikeGrid.innerHTML = '';
            const filteredBikes = filter === 'all' ? appData.bikes : appData.bikes.filter(bike => bike.category === filter);
            
            filteredBikes.forEach((bike, index) => {
                const bikeCard = document.createElement('div');
                bikeCard.className = 'bg-white dark:bg-slate-800 rounded-2xl shadow-lg overflow-hidden flex flex-col transform transition-all duration-300 hover:shadow-2xl hover:-translate-y-2 scroll-reveal';
                bikeCard.style.transitionDelay = `${index * 100}ms`;
                
                bikeCard.innerHTML = `
                    <div class="relative">
                        <img src="${bike.image}" alt="${bike.alt}" loading="lazy" onerror="this.onerror=null;this.src='https://placehold.co/800x600/e2e8f0/475569?text=Imagem+Indispon%C3%ADvel';" class="w-full h-60 object-cover">
                        <p class="absolute bottom-2 right-2 text-xs text-white bg-black bg-opacity-50 px-2 py-1 rounded">Imagem meramente ilustrativa</p>
                    </div>
                    <div class="p-8 flex flex-col flex-grow">
                        <h3 class="font-heading text-2xl font-bold text-cyan-800 dark:text-cyan-400 mb-3">${bike.name}</h3>
                        <p class="mb-6 text-slate-600 dark:text-slate-400 text-left flex-grow">${bike.description}</p>
                        <ul class="text-left space-y-3 mb-8 text-slate-600 dark:text-slate-400">
                            ${bike.features.map(f => `<li><i class="fas fa-check-circle text-amber-600 mr-3 w-5"></i>${f}</li>`).join('')}
                        </ul>
                        <a href="${bike.whatsapp}" target="_blank" class="font-bold text-cyan-800 dark:text-cyan-400 hover:text-amber-600 transition-colors mt-auto text-center text-lg">Consultar <i class="fab fa-whatsapp ml-2"></i></a>
                    </div>
                `;
                bikeGrid.appendChild(bikeCard);
                observer.observe(bikeCard);
            });
        }

        bikeFilters.addEventListener('click', (e) => {
            if (e.target.tagName === 'BUTTON') {
                document.querySelector('.filter-button.active').classList.remove('active');
                e.target.classList.add('active');
                renderBikes(e.target.dataset.filter);
            }
        });

        // --- Blog Section & Modal ---
        const blogGrid = document.getElementById('blog-grid');
        const blogModal = document.getElementById('blog-modal');
        const modalContentContainer = document.getElementById('modal-content-container');

        function openBlogModal(post) {
            modalContentContainer.innerHTML = `
                <button class="close-modal-btn" aria-label="Fechar modal">×</button>
                <img src="${post.image}" alt="${post.alt}" class="w-full h-64 object-cover rounded-t-lg" onerror="this.onerror=null;this.src='https://placehold.co/800x400/e2e8f0/475569?text=Imagem+do+Blog';">
                <div class="p-8">
                    <p class="text-cyan-700 dark:text-cyan-400 font-bold text-sm uppercase mb-2">${post.category}</p>
                    <div class="prose dark:prose-invert max-w-none">
                        ${post.fullContent}
                    </div>
                </div>
            `;
            blogModal.classList.add('open');
            document.body.style.overflow = 'hidden';
        }

        function closeBlogModal() {
            blogModal.classList.remove('open');
            document.body.style.overflow = '';
        }
        
        blogModal.addEventListener('click', (e) => {
            if (e.target === blogModal || e.target.closest('.close-modal-btn')) {
                closeBlogModal();
            }
        });

        function renderBlog() {
            blogGrid.innerHTML = '';
            appData.blogPosts.forEach((item, index) => {
                const card = document.createElement('div');
                card.className = 'bg-white dark:bg-slate-800 rounded-2xl shadow-lg overflow-hidden flex flex-col transform transition-all duration-300 hover:shadow-2xl hover:-translate-y-2 scroll-reveal';
                card.style.transitionDelay = `${index * 100}ms`;

                card.innerHTML = `
                    <img src="${item.image}" alt="${item.alt}" loading="lazy" onerror="this.onerror=null;this.src='https://placehold.co/800x600/e2e8f0/475569?text=Blog';" class="w-full h-56 object-cover">
                    <div class="p-8 flex flex-col flex-grow">
                        <p class="text-cyan-700 dark:text-cyan-400 font-bold text-sm uppercase mb-2">${item.category}</p>
                        <h3 class="font-heading text-2xl font-bold text-slate-800 dark:text-white mb-3">${item.title}</h3>
                        <p class="text-slate-600 dark:text-slate-400 mb-6 flex-grow">${item.text}</p>
                        <button data-post-index="${index}" class="blog-read-more-btn font-bold text-sm text-white bg-cyan-700 hover:bg-cyan-800 dark:bg-cyan-600 dark:hover:bg-cyan-700 rounded-full px-4 py-2 transition-colors mt-auto self-start">Ler mais <i class="fas fa-arrow-right ml-1"></i></button>
                    </div>
                `;
                blogGrid.appendChild(card);
                observer.observe(card);
            });

            blogGrid.addEventListener('click', (e) => {
                const button = e.target.closest('.blog-read-more-btn');
                if (button) {
                    const postIndex = button.dataset.postIndex;
                    const post = appData.blogPosts[postIndex];
                    if (post && post.fullContent) {
                        openBlogModal(post);
                    }
                }
            });
        }
        
        // --- Accessories Section ---
        const accessoriesGrid = document.getElementById('accessories-grid');
        function renderAccessories() {
            appData.accessories.forEach((item, index) => {
                const card = document.createElement('div');
                card.className = 'text-center scroll-reveal';
                card.style.transitionDelay = `${index * 100}ms`;
                card.innerHTML = `
                    <div class="bg-white dark:bg-slate-800 rounded-lg overflow-hidden mb-4 shadow-lg hover:shadow-2xl transition-shadow duration-300">
                        <img src="${item.image}" alt="${item.alt}" loading="lazy" class="w-full h-40 object-cover">
                    </div>
                    <h4 class="font-heading font-semibold text-slate-700 dark:text-slate-300">${item.name}</h4>
                `;
                accessoriesGrid.appendChild(card);
                observer.observe(card);
            });
        }

        // --- FAQ Section ---
        const faqContainer = document.getElementById('faq-container');
        function renderFaqs() {
            faqContainer.innerHTML = '';
            appData.faqs.forEach(faq => {
                const faqItem = document.createElement('div');
                faqItem.className = 'bg-white dark:bg-slate-800 rounded-lg shadow-md overflow-hidden';
                faqItem.innerHTML = `
                    <button class="faq-question w-full flex justify-between items-center text-left p-6 font-heading font-semibold text-lg text-slate-800 dark:text-white" aria-expanded="false">
                        <span>${faq.q}</span>
                        <i class="fas fa-plus transition-transform duration-300"></i>
                    </button>
                    <div class="faq-answer px-6 text-slate-600 dark:text-slate-400 leading-relaxed">
                        <p>${faq.a}</p>
                    </div>
                `;
                faqContainer.appendChild(faqItem);
            });

            faqContainer.addEventListener('click', (e) => {
                const question = e.target.closest('.faq-question');
                if (!question) return;

                const currentlyActive = document.querySelector('.faq-question.active');
                if (currentlyActive && currentlyActive !== question) {
                    currentlyActive.classList.remove('active');
                    currentlyActive.setAttribute('aria-expanded', 'false');
                    currentlyActive.nextElementSibling.style.maxHeight = null;
                }

                question.classList.toggle('active');
                const answer = question.nextElementSibling;
                if (question.classList.contains('active')) {
                    question.setAttribute('aria-expanded', 'true');
                    answer.style.maxHeight = answer.scrollHeight + 'px';
                } else {
                    question.setAttribute('aria-expanded', 'false');
                    answer.style.maxHeight = null;
                }
            });
        }

        // --- Route Planner Section ---
        const interactiveMapContainer = document.getElementById('interactive-map-container');
        const routeList = document.getElementById('route-list');
        const routeTitle = document.getElementById('route-title');
        const routeDescription = document.getElementById('route-description');
        const routeBike = document.getElementById('route-bike');
        const routeStats = document.getElementById('route-stats');
        let routesChart;

        function updateRouteDisplay(routeId) {
            const route = appData.routes.find(r => r.id === routeId);
            if (!route) return;

            interactiveMapContainer.innerHTML = `<iframe src="${route.embedUrl}" width="100%" height="100%" style="border:0;" loading="lazy" referrerpolicy="no-referrer-when-downgrade" title="Mapa da rota ${route.name}"></iframe>`;

            routeTitle.textContent = route.name;
            routeDescription.textContent = route.description;
            routeBike.textContent = route.bike;
            routeStats.innerHTML = `
                <span><i class="fas fa-route mr-1 text-cyan-700 dark:text-cyan-400"></i> ${route.distance}</span>
                <span><i class="fas fa-clock mr-1 text-cyan-700 dark:text-cyan-400"></i> ${route.duration}</span>
                <span><i class="fas fa-mountain mr-1 text-cyan-700 dark:text-cyan-400"></i> ${route.elevation}</span>
            `;

            document.querySelectorAll('.route-item').forEach(item => {
                item.classList.toggle('active', item.dataset.routeId === routeId);
            });
            
            if (routesChart) {
                const routeIndex = appData.routes.findIndex(r => r.id === routeId);
                routesChart.data.datasets[0].backgroundColor = appData.routes.map((r, index) => 
                    index === routeIndex ? 'rgba(12, 74, 110, 0.8)' : 'rgba(217, 119, 6, 0.6)'
                );
                routesChart.update();
            }
        }

        function renderRouteList() {
            routeList.innerHTML = '';
            appData.routes.forEach((route) => {
                const listItem = document.createElement('li');
                listItem.className = 'route-item p-3 rounded-lg shadow-sm cursor-pointer transition-all duration-300 bg-white dark:bg-slate-700 text-slate-700 dark:text-slate-300 hover:bg-amber-100 dark:hover:bg-amber-900/50';
                listItem.dataset.routeId = route.id;
                listItem.textContent = route.name;
                listItem.addEventListener('click', () => updateRouteDisplay(route.id));
                routeList.appendChild(listItem);
            });
        }

        function initializeChart() {
            const ctx = document.getElementById('routesChart').getContext('2d');
            const isDarkMode = document.documentElement.classList.contains('dark');
            routesChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: appData.routes.map(r => r.name),
                    datasets: [{
                        label: 'Nível de Dificuldade',
                        data: appData.routes.map(r => r.difficulty),
                        backgroundColor: 'rgba(217, 119, 6, 0.6)',
                        borderColor: 'rgba(217, 119, 6, 1)',
                        borderWidth: 1,
                        borderRadius: 4,
                    }]
                },
                options: {
                    indexAxis: 'y',
                    maintainAspectRatio: false,
                    responsive: true,
                    scales: {
                        x: { 
                            beginAtZero: true, 
                            max: 10, 
                            title: { display: true, text: 'Dificuldade (1 a 10)', color: isDarkMode ? '#94a3b8' : '#475569' },
                            ticks: { color: isDarkMode ? '#94a3b8' : '#475569' },
                            grid: { color: isDarkMode ? '#334155' : '#e2e8f0' }
                        },
                        y: { 
                            grid: { display: false },
                            ticks: { color: isDarkMode ? '#94a3b8' : '#475569' }
                        }
                    },
                    plugins: {
                        legend: { display: false },
                        tooltip: { callbacks: { label: (c) => ` Dificuldade: ${c.parsed.x}` } }
                    },
                    onClick: (e, elements) => {
                        if (elements.length > 0) {
                            const routeIndex = elements[0].index;
                            const selectedRoute = appData.routes[routeIndex];
                            updateRouteDisplay(selectedRoute.id);
                        }
                    }
                }
            });
        }
        
        // --- Gemini API Integration ---
        const bikeRecommenderModal = document.getElementById('bike-recommender-modal');
        const customRouteModal = document.getElementById('custom-route-modal');

        // Function to open a modal
        function openModal(modal) {
            modal.classList.add('open');
            document.body.style.overflow = 'hidden';
        }

        // Function to close a modal
        function closeModal(modal) {
            modal.classList.remove('open');
            document.body.style.overflow = '';
        }
        
        // Generic Gemini API call function
        async function callGemini(prompt) {
            let chatHistory = [{ role: "user", parts: [{ text: prompt }] }];
            const payload = { contents: chatHistory };
            const apiKey = ""; 
            const apiUrl = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.0-flash:generateContent?key=${apiKey}`;

            try {
                const response = await fetch(apiUrl, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(payload)
                });
                if (!response.ok) {
                    throw new Error(`API request failed with status ${response.status}`);
                }
                const result = await response.json();
                if (result.candidates && result.candidates.length > 0 &&
                    result.candidates[0].content && result.candidates[0].content.parts &&
                    result.candidates[0].content.parts.length > 0) {
                    return result.candidates[0].content.parts[0].text;
                } else {
                    console.error("Unexpected API response structure:", result);
                    return null;
                }
            } catch (error) {
                console.error("Error calling Gemini API:", error);
                return null;
            }
        }

        // Bike Recommender Logic
        document.getElementById('open-bike-recommender').addEventListener('click', () => openModal(bikeRecommenderModal));
        bikeRecommenderModal.querySelector('.close-modal-btn').addEventListener('click', () => closeModal(bikeRecommenderModal));
        
        document.getElementById('bike-recommender-submit').addEventListener('click', async () => {
            const input = document.getElementById('bike-recommender-input').value;
            const resultDiv = document.getElementById('bike-recommender-result');
            if (!input) return;

            resultDiv.innerHTML = '<div class="loader"></div>';
            
            const bikesForPrompt = JSON.stringify(appData.bikes.map(b => ({id: b.id, name: b.name, category: b.category, description: b.description})));
            const prompt = `Você é um especialista em vendas da Santa Bike. Um cliente descreveu o que precisa: "${input}". Com base na lista de bicicletas disponíveis ${bikesForPrompt}, recomende a(s) melhor(es) bike(s). Retorne APENAS um JSON no formato {"recommendations": ["id_da_bike_1", "id_da_bike_2"]}.`;

            const responseText = await callGemini(prompt);
            if (responseText) {
                try {
                    // Clean the response to ensure it's valid JSON
                    const cleanedResponse = responseText.replace(/```json/g, '').replace(/```/g, '').trim();
                    const responseJson = JSON.parse(cleanedResponse);
                    
                    resultDiv.innerHTML = '<h4 class="font-heading font-bold text-lg mb-4 dark:text-white">Encontramos as bikes perfeitas para você!</h4>';
                    if (responseJson.recommendations && responseJson.recommendations.length > 0) {
                        responseJson.recommendations.forEach(bikeId => {
                            const bike = appData.bikes.find(b => b.id === bikeId);
                            if (bike) {
                                const bikeCard = document.createElement('div');
                                bikeCard.className = 'bg-slate-50 dark:bg-slate-700 rounded-lg p-4 mb-4 flex items-center gap-4';
                                bikeCard.innerHTML = `
                                    <img src="${bike.image}" alt="${bike.alt}" class="w-24 h-24 object-cover rounded-md">
                                    <div>
                                        <h5 class="font-bold font-heading dark:text-white">${bike.name}</h5>
                                        <p class="text-sm text-slate-600 dark:text-slate-400">${bike.description}</p>
                                        <a href="${bike.whatsapp}" target="_blank" class="text-sm font-bold text-cyan-700 dark:text-cyan-400 hover:text-amber-600">Ver detalhes <i class="fab fa-whatsapp ml-1"></i></a>
                                    </div>
                                `;
                                resultDiv.appendChild(bikeCard);
                            }
                        });
                    } else {
                        resultDiv.innerHTML += '<p class="dark:text-slate-400">Não encontramos uma recomendação exata. Que tal explorar nosso catálogo completo?</p>';
                    }
                } catch (e) {
                    console.error("Failed to parse Gemini response:", e);
                    resultDiv.innerHTML = '<p class="text-red-500">Ocorreu um erro ao processar a recomendação. Por favor, tente novamente.</p>';
                }
            } else {
                resultDiv.innerHTML = '<p class="text-red-500">Não foi possível obter uma recomendação. Por favor, tente novamente mais tarde.</p>';
            }
        });

        // Custom Route Logic
        document.getElementById('open-custom-route').addEventListener('click', () => openModal(customRouteModal));
        customRouteModal.querySelector('.close-modal-btn').addEventListener('click', () => closeModal(customRouteModal));

        document.getElementById('custom-route-submit').addEventListener('click', async () => {
            const input = document.getElementById('custom-route-input').value;
            const resultDiv = document.getElementById('custom-route-result');
            if (!input) return;

            resultDiv.innerHTML = '<div class="loader"></div>';

            const prompt = `Você é um guia de ciclismo especialista em Lagoa Santa, MG. Um ciclista pediu uma sugestão de rota com a seguinte descrição: "${input}". Crie uma rota fictícia, mas plausível para a região. A rota deve ter um nome criativo, uma descrição, uma distância aproximada em km, duração estimada, nível de dificuldade (1-10) e uma sugestão de bike ideal. Retorne APENAS um JSON no formato {"route": {"name": "...", "description": "...", "distance": "...", "duration": "...", "difficulty": ..., "bike": "..."}}.`;

            const responseText = await callGemini(prompt);
            if (responseText) {
                try {
                    const cleanedResponse = responseText.replace(/```json/g, '').replace(/```/g, '').trim();
                    const responseJson = JSON.parse(cleanedResponse);
                    const route = responseJson.route;
                    resultDiv.innerHTML = `
                        <h4 class="font-heading font-bold text-lg mb-4 dark:text-white">Sua aventura personalizada te espera!</h4>
                        <div class="bg-slate-50 dark:bg-slate-700 rounded-lg p-4">
                            <h5 class="font-bold font-heading text-cyan-800 dark:text-cyan-400">${route.name}</h5>
                            <div class="flex flex-wrap gap-x-4 gap-y-2 text-sm text-slate-600 dark:text-slate-400 my-2">
                                <span><i class="fas fa-route mr-1"></i> ${route.distance}</span>
                                <span><i class="fas fa-clock mr-1"></i> ${route.duration}</span>
                                <span><i class="fas fa-tachometer-alt mr-1"></i> Dificuldade: ${route.difficulty}/10</span>
                            </div>
                            <p class="text-sm text-slate-600 dark:text-slate-400 mb-3">${route.description}</p>
                            <p class="font-bold text-xs text-slate-500 dark:text-slate-300 bg-slate-200 dark:bg-slate-600 inline-block px-2 py-1 rounded-full">Bike ideal: ${route.bike}</p>
                        </div>
                    `;
                } catch (e) {
                    console.error("Failed to parse Gemini response:", e);
                    resultDiv.innerHTML = '<p class="text-red-500">Ocorreu um erro ao gerar a rota. Por favor, tente novamente.</p>';
                }
            } else {
                 resultDiv.innerHTML = '<p class="text-red-500">Não foi possível gerar a rota. Por favor, tente novamente mais tarde.</p>';
            }
        });
        
        // --- Dark Mode Toggle ---
        const themeToggle = document.getElementById('theme-toggle');
        const htmlEl = document.documentElement;

        // On page load or when changing themes, best to add inline in `head` to avoid FOUC
        if (localStorage.getItem('theme') === 'dark' || (!('theme' in localStorage) && window.matchMedia('(prefers-color-scheme: dark)').matches)) {
            htmlEl.classList.add('dark');
            themeToggle.innerHTML = '<i class="fas fa-moon"></i>';
        } else {
            htmlEl.classList.remove('dark');
            themeToggle.innerHTML = '<i class="fas fa-sun"></i>';
        }

        themeToggle.addEventListener('click', function() {
            htmlEl.classList.toggle('dark');
            if (htmlEl.classList.contains('dark')) {
                localStorage.setItem('theme', 'dark');
                themeToggle.innerHTML = '<i class="fas fa-moon"></i>';
            } else {
                localStorage.setItem('theme', 'light');
                themeToggle.innerHTML = '<i class="fas fa-sun"></i>';
            }
            // Re-initialize chart to update colors
            if(routesChart) routesChart.destroy();
            initializeChart();
        });


        // --- Initial Function Calls ---
        renderServices();
        renderBikes();
        renderBlog();
        renderAccessories();
        renderFaqs();
        renderRouteList();
        initializeChart();
        updateRouteDisplay(appData.routes[0].id);

    });
    </script>
</body>
</html>
